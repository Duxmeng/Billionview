/* pages/mine/advertising_supervision/advertising_supervision.wxss */
@import "../../mine/mine.wxss";
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
.wrapper{padding-bottom:0rpx;}
.padd-bo{width:100%;padding-top:370rpx;}
.pos{width:100%;position:fixed;top:0rpx;left:0rpx;background:#fff;}
.user{margin-bottom:0rpx;width:100%}

/*导航样式*/
.tab-h{display:flex;line-height: 100rpx;}
.tab-item{font-size:30rpx;flex:auto;color:#353535;text-align:center;box-sizing:border-box;}
.tab-item.active{border-bottom:6rpx solid #fedd02;}

.scoll-h{padding:10rpx 0rpx 0rpx 30rpx;background:#fff;box-sizing:border-box;height:100%;}
.ad_li{padding-right:30rpx;box-sizing:border-box;border-bottom:1px solid #eeeeee;display:flex;padding-bottom:30rpx;padding-top:30rpx;}
.ad_lil{position:relative;width: 220rpx;height: 220rpx;}
.ad_pos{position:absolute;background:rgba(0,0,0,0.3);width:100%;height:100%;top:0rpx;left:0rpx;display:flex;align-items:center;justify-content:center;}
.ad_pos image{width:44rpx;height:56rpx;}
.ad_liimg{width:220rpx;height:220rpx;}
.ad_lir{padding-left:20rpx;width: 80%;}
.ad_title{font-size:34rpx;color:#000000;font-weight:bold;padding-bottom:8rpx;word-break:break-all;}
.ad_time{font-size:24rpx;color:#dfdfdf;line-height:44rpx;}
.ad_text{font-size:28rpx;color:#a9a9a9;line-height:38rpx;display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
overflow: hidden;}
.adlibig .ad_liimg{width:220rpx;height:220rpx;}
.list_button{width:100rpx;height:46rpx;background:#fedd02;font-size:28rpx;color:#353535;text-align:center;line-height:46rpx;border-radius:5px;margin-top:16rpx;}
.arbottom{display:flex;justify-content:space-between;align-items:center;line-height:62rpx;height:62rpx;}
.no_infor{font-size:30rpx;color:#f24a24;line-height:46rpx;padding-top:16rpx;}
.downline{border:1px solid #cccccc;background:#fff;color:#cccccc;}
.eye{height:28rpx;line-height:28rpx;font-size:24rpx;color:#353535;margin-top:25rpx;position:relative;padding-right:30rpx;}
.eye::after{content:'';width:14rpx;height:14rpx;border-left:4rpx solid #353535;border-bottom:4rpx solid #353535;-webkit-transform: translate(0,-50%) rotate(-135deg);
  transform: translate(0,-50%) rotate(-135deg);position:absolute;right:0rpx;top:50%;}
.eye image{width:28rpx;height:21rpx;}
.red{background:#f24a24;color:#ffffff;}
/* 内容为空时 */
.mydata_null {
text-align:center;
font-size:24rpx;
color:#999;
padding-top:40rpx;
}
.newsNull {
display:block;
margin:0 auto;
margin-top:200rpx;
width:94rpx;
height:84rpx;
margin-bottom:20rpx;
}

.notices{width: 377rpx;height: 259rpx;display: block;margin: 200rpx auto 0;}
