/* pages/mine/Mywallet/Mywallet.wxss */
@import "../../mine/mine.wxss";
.wrapper{padding-bottom:0rpx;}
.wallet{background:#fedd02;padding:70rpx 0rpx 80rpx 0rpx;margin-bottom:20rpx;}
.balance{font-size:28rpx;color:#282828;padding:0rpx 30rpx;box-sizing:border-box;padding-bottom:20rpx;}
.balance_detail{display:flex;color:#282828;height:76rpx;line-height:76rpx;justify-content:space-between;padding:0rpx 30rpx;box-sizing:border-box;}
.detail1{font-size:36rpx;font-weight:bold;margin-right:14rpx;}
.detail2{font-size:80rpx;}
.detail3{height:40rpx;line-height:40rpx;font-size:28rpx;margin-top:25rpx;position:relative;padding-right:30rpx;align-self:flex-end;}
.walletul{display:flex;padding-top:80rpx;}
.walletli{height:104rpx;flex:1;border-left:1px solid #282828;box-sizing:border-box;text-align: center;}
.walletul .walletli:first-child{border:none;}
.wali1{font-size:28rpx;}
.wali2{font-size:40rpx;}
.watextd{font-size:28rpx;color:#282828;font-weight:bold;margin-right:14rpx;}
.detail3::after{content:'';width:14rpx;height:14rpx;border-left:4rpx solid #353535;border-bottom:4rpx solid #353535;-webkit-transform: translate(0,-50%) rotate(-135deg);
  transform: translate(0,-50%) rotate(-135deg);position:absolute;right:0rpx;top:50%;}
.smalltext{font-size:28rpx;color:#fedd02;position:relative;top:4rpx;}
