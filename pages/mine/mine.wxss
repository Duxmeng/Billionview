/* pages/mine/mine.wxss */
page{background:#efeff4;}
.wrapper{padding-bottom:4rpx;}
.user{min-height:264rpx;background:#fedd02;box-sizing:border-box;padding:56rpx 30rpx;margin-bottom:20rpx;position:relative;display:flex; align-items:center;justify-content: space-between;}
.people{width:150rpx;height:150rpx;border-radius:50%;}
.title{font-size:40rpx;color:#282828;font-weight:600;margin-bottom:8rpx;}
.text{font-size:28rpx;color:#282828;line-height:42rpx;}
.mine_list{background:#fff;border-top:1px solid #e5e5e5;border-bottom:1px solid #e5e5e5;padding-left:30rpx;margin-bottom: 20rpx;}
.mine_list .mine_one:last-child{border-bottom:none;}
.mine_one{position:relative;height:88rpx;display:flex;align-items:center;border-bottom:1px solid #e5e5e5;box-sizing:border-box;padding-right:30rpx;}
.mine_one::after{content:'';width:14rpx;height:14rpx;border-left:4rpx solid #c7c7cc;border-bottom:4rpx solid #c7c7cc;-webkit-transform: translate(0,-50%) rotate(-135deg);
transform: translate(0,-50%) rotate(-135deg);position:absolute;top:50%;right:30rpx;}
.mine_one image{width:35rpx;height: 35rpx;}
.mine_one text{font-size:34rpx;color:#000000;padding-left:20rpx;}
